import board #imoprt all files
import time
from digitalio import DigitalInOut, Direction, Pull
from analogio import AnalogIn
from lcd.lcd import LCD
from lcd.i2c_pcf8574_interface import I2CPCF8574Interface
import simpleio 

i2c = board.I2C() #get an i2c object 
lcd = LCD(I2CPCF8574Interface(i2c, 0x27), num_rows=2, num_cols=16) #initiate LCD screen
temp = AnalogIn(board.A0)

while True:
    print(simpleio.map_range(temp.value, 1023, 65535, 0, 125))
    lcd.set_cursor_pos(1,1) #set lcd cursor
    lcd.print(str(temp.value)) #print temperature
    
    if temp.value > 80:
        lcd.set_cursor_pos(1,2)
        lcd.print("Too Hot!                ")
    elif temp.value < 50:
        lcd.set_cursor_pos(1,2)
        lcd.print("Too Hot!                ")
    else:
        lcd.set_cursor_pos(1,2)
        lcd.print("It Feels Great In Here! ")        
    